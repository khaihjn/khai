<style>
	.container {
		max-width: 940px;
		margin: 0 auto;
		padding: 6rem 1.2rem 3rem;
	}

	.hero {
		display: grid;
		grid-template-columns: minmax(0, 1fr) auto;
		gap: clamp(1rem, 3vw, 2rem);
		align-items: center;
		padding-bottom: 2.2rem;
		border-bottom: 1px solid var(--line);
	}

	.hero-copy {
		max-width: 62ch;
	}

	.eyebrow {
		margin: 0 0 0.85rem;
		font: 600 0.8rem/1 'IBM Plex Mono', 'SFMono-Regular', Menlo, Monaco, Consolas, monospace;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		color: var(--muted);
	}

	h1 {
		margin: 0;
		font-size: clamp(2.1rem, 4.2vw, 4rem);
		line-height: 0.96;
		letter-spacing: -0.03em;
	}

	.intro {
		margin-top: 1.1rem;
		font-size: clamp(1rem, 1.2vw, 1.2rem);
		line-height: 1.6;
		color: var(--muted);
	}

	.portrait-card {
		width: clamp(152px, 18vw, 220px);
		justify-self: end;
		margin: 0;
		padding: 0;
	}

	.portrait {
		display: block;
		width: 100%;
		height: 100%;
		aspect-ratio: 1 / 1;
		object-fit: cover;
		border: 0;
		border-radius: 0;
		background: var(--bg);
	}

	@media (min-width: 900px) {
		.portrait-card {
			margin-right: clamp(0.75rem, 2vw, 1.5rem);
		}
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 1rem;
		margin-top: 1rem;
	}

	.card {
		padding: 1.2rem;
		background: var(--surface);
		border: 1px solid var(--line);
	}

	.card h2,
	.work h2,
	.contact h2 {
		margin: 0 0 0.9rem;
		font-size: 1rem;
		letter-spacing: 0.07em;
		text-transform: uppercase;
		font-family: 'IBM Plex Mono', 'SFMono-Regular', Menlo, Monaco, Consolas, monospace;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 0.7rem;
		color: var(--muted);
	}

	.work {
		margin-top: 2.2rem;
	}

	.projects {
		display: grid;
		gap: 1rem;
	}

	.project {
		display: block;
		padding: 1rem 1.1rem;
		text-decoration: none;
		color: inherit;
		border: 1px solid var(--line);
		background: var(--surface);
		transition: transform 130ms ease;
	}

	.project:hover {
		transform: translateY(-2px);
	}

	.project h3 {
		margin: 0;
		font-size: 1.08rem;
	}

	.project p {
		margin: 0.5rem 0 0;
		color: var(--muted);
		line-height: 1.55;
	}

	.contact {
		margin-top: 2.2rem;
		border-top: 1px solid var(--line);
		padding-top: 1.2rem;
	}

	.links {
		display: flex;
		gap: 1.2rem;
		flex-wrap: wrap;
	}

	.links a {
		color: inherit;
		font: 500 0.95rem/1.4 'IBM Plex Mono', 'SFMono-Regular', Menlo, Monaco, Consolas, monospace;
		text-decoration-thickness: 1px;
		text-underline-offset: 0.18em;
	}

	.site-footer {
		margin-top: 2.2rem;
		padding-top: 1rem;
		border-top: 1px solid var(--line);
		display: grid;
		gap: 0.35rem;
	}

	.site-footer p {
		margin: 0;
		color: var(--muted);
		font: 500 0.88rem/1.45 'IBM Plex Mono', 'SFMono-Regular', Menlo, Monaco, Consolas, monospace;
	}

	@media (max-width: 720px) {
		.container {
			padding-top: 4.25rem;
		}

		.hero {
			grid-template-columns: 1fr;
			align-items: start;
			gap: 0.85rem;
			padding-bottom: 1.4rem;
		}

		.portrait-card {
			width: min(56vw, 210px);
			justify-self: center;
			margin-top: 0.2rem;
			margin-bottom: 0.2rem;
		}

		.portrait {
			aspect-ratio: 1 / 1;
			object-position: 50% 50%;
		}

		.grid {
			grid-template-columns: 1fr;
		}

	}
</style>
