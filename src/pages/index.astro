<style>
	.container {
		max-width: 1040px;
		margin: 0 auto;
		padding: 6.5rem 1.35rem 3.4rem;
	}

	.hero {
		display: grid;
		grid-template-columns: minmax(0, 1fr) minmax(160px, 220px);
		gap: clamp(1.1rem, 3vw, 2.6rem);
		align-items: center;
		padding-bottom: 2.5rem;
		border-bottom: 1px solid var(--line);
	}

	.hero-copy {
		max-width: 64ch;
	}

	.eyebrow {
		margin: 0 0 0.95rem;
		font: 600 0.8rem/1 'IBM Plex Mono', 'SFMono-Regular', Menlo, Monaco, Consolas, monospace;
		letter-spacing: 0.1em;
		text-transform: uppercase;
		color: var(--muted);
	}

	h1 {
		margin: 0;
		font-size: clamp(2.25rem, 5vw, 4.8rem);
		line-height: 0.92;
		letter-spacing: -0.04em;
		text-wrap: balance;
	}

	.intro {
		max-width: 58ch;
		margin-top: 1.2rem;
		font-size: clamp(1rem, 1.25vw, 1.22rem);
		line-height: 1.62;
		color: var(--muted);
	}

	.portrait-card {
		width: clamp(160px, 19vw, 230px);
		justify-self: end;
		margin: 0;
		padding: 0.5rem;
		background: var(--surface);
		border: 1px solid var(--line);
		border-radius: 1rem;
		box-shadow: 0 14px 36px rgba(0, 0, 0, 0.1);
	}

	.portrait {
		display: block;
		width: 100%;
		height: 100%;
		aspect-ratio: 1 / 1;
		object-fit: cover;
		border: 1px solid var(--line);
		border-radius: 0.7rem;
		background: var(--bg);
	}

	@media (min-width: 900px) {
		.portrait-card {
			margin-right: clamp(0.75rem, 2vw, 1.5rem);
		}
	}

	.grid {
		display: grid;
		grid-template-columns: repeat(2, minmax(0, 1fr));
		gap: 1rem;
		margin-top: 1.2rem;
	}

	.grid-first {
		margin-top: 1.35rem;
	}

	.card {
		padding: 1.25rem;
		background: var(--surface);
		border: 1px solid var(--line);
		border-radius: 0.9rem;
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
	}

	.card h2,
	.work h2,
	.contact h2 {
		margin: 0 0 0.9rem;
		font-size: 0.96rem;
		letter-spacing: 0.07em;
		text-transform: uppercase;
		font-family: 'IBM Plex Mono', 'SFMono-Regular', Menlo, Monaco, Consolas, monospace;
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: 0.7rem;
		color: var(--muted);
		line-height: 1.45;
	}

	.work {
		margin-top: 2.6rem;
	}

	.projects {
		display: grid;
		gap: 0.9rem;
	}

	.project {
		display: block;
		padding: 1.15rem 1.2rem;
		text-decoration: none;
		color: inherit;
		border: 1px solid var(--line);
		background: var(--surface);
		border-radius: 0.9rem;
		box-shadow: 0 8px 24px rgba(0, 0, 0, 0.06);
		transition: transform 150ms ease, box-shadow 150ms ease;
	}

	.project:hover {
		transform: translateY(-3px);
		box-shadow: 0 14px 32px rgba(0, 0, 0, 0.12);
	}

	.project:focus-visible {
		outline: 2px solid var(--line);
		outline-offset: 2px;
		transform: translateY(-2px);
	}

	.project h3 {
		margin: 0;
		font-size: 1.06rem;
	}

	.project p {
		margin: 0.55rem 0 0;
		color: var(--muted);
		line-height: 1.55;
	}

	.contact {
		margin-top: 2.6rem;
		border-top: 1px solid var(--line);
		padding-top: 1.25rem;
	}

	.links {
		display: flex;
		gap: 1.2rem;
		flex-wrap: wrap;
	}

	.links a {
		color: inherit;
		font: 500 0.95rem/1.4 'IBM Plex Mono', 'SFMono-Regular', Menlo, Monaco, Consolas, monospace;
		text-decoration-thickness: 1px;
		text-underline-offset: 0.18em;
	}

	.links a:focus-visible {
		outline: 2px solid var(--line);
		outline-offset: 2px;
		border-radius: 0.2rem;
	}

	@media (max-width: 860px) {
		.container {
			padding-top: 4.75rem;
		}

		.hero {
			grid-template-columns: 1fr;
			align-items: start;
			gap: 1rem;
			padding-bottom: 1.6rem;
		}

		.portrait-card {
			width: min(62vw, 230px);
			justify-self: center;
			margin-top: 0.1rem;
			margin-bottom: 0.25rem;
			padding: 0.4rem;
		}

		.portrait {
			aspect-ratio: 1 / 1;
			object-position: 50% 50%;
		}

		h1 {
			font-size: clamp(2.05rem, 12vw, 3.45rem);
		}

		.grid {
			grid-template-columns: 1fr;
		}
	}
</style>
